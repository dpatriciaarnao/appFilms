<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application>
        <!--La app corre en modo Landscape y modo Portrait -->
    <activity
        android:name="com.application.presentation.views.ui.splash.SplashActivity"
        android:exported="true"
        android:theme="@style/Theme.AppMovies"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name="com.application.presentation.views.ui.ListFilmActivity"
        android:exported="true"
        android:screenOrientation="fullUser" >
    </activity>
    </application>

</manifest>